###########################################################
# .gitconfig template by Robert Ellenberg
# Use the associated git-setup.bash script to configure your system,
# or simply edit the fields yourself
[user]
	name = <FIRST> <LAST>
	email = <EMAIL>

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    tool = vimdiff

[difftool]
    prompt = false
[alias]
    vdiff = difftool
    graph = log --oneline --all --graph
    wdiff = diff --color--words
    update = pull --rebase
[branch]
    autosetupmerge = true
[core]
    editor = vim
    excludesfile = ~/.gitignore
#URL substitution with standard scp syntax allows git-cola to push / pull without needing to consult ./ssh/config
[url "<DASL_USER>@dasl.mem.drexel.edu:~/repos/"]
    insteadOf = dasl:

#This substitution allows a simple shortcut to your own github account
[url "git://github.com/<GITHUB_USER>/"]
    insteadOf = github:

# This substitution automatically gives you write access to a read-only
#   account if your username has write permissions (this does NOT 
#   magically grant write access otherwise.
[url "<GITHUB_PUSH_URL>"]
    pushInsteadOf = git://github.com/
    pushInsteadOf = github:
