###########################################################
# .gitconfig template by Robert Ellenberg
# Use the associated git-setup.bash script to configure your system,
# or simply edit the fields yourself
[user]
	name = <FIRST> <LAST>
	email = <EMAIL>

[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    #Fancy history graph in the terminal
    graph = log --oneline --date-order --graph --all --decorate

    #Show the root directory of your current git repository (useful for some scripts)
    root = rev-parse --show-toplevel
    #Experimental url-expansion in case you want a hard-coded url after the
    #fact, or want to convert your current URL's to this system for some reason
    #Simple command to explicitly un-add changes that have been staged
    stage = add
    unstage = reset --
    ls-staged = diff --cached
    #Other useful aliases for ignoring changes in specific files
    #Copied from:
    #http://durdn.com/blog/2012/11/22/must-have-git-aliases-advanced-examples/
    assume = update-index --assume-unchanged 
    unassume = update-index --no-assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    unassume-all = "!git assumed | xargs git update-index --no-assume-unchanged"

[branch]
    autosetupmerge = true
[core]
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    renames = copies
    mnemonicprefix = true

[difftool]
  prompt = false

[difftool "bcompare"]
  trustExitCode = true
  cmd = bcompare \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = bcompare
[mergetool]
  prompt = false

[mergetool "bcompare"]
  trustExitCode = true
  cmd = bcompare \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"

[rebase]
	instructionFormat = [%an @ %ar] %s
